<Window x:Class="CacheApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CacheApp"
        mc:Ignorable="d"
        Title="Cache User Interface" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid Height="434" VerticalAlignment="Bottom">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="345*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="342*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Cache Log" HorizontalAlignment="Right" Height="29" Margin="0,16,79,0" Grid.Row="1" VerticalAlignment="Top" Width="258"/>
        <TextBox x:Name="logDisplay" Grid.Column="1" HorizontalAlignment="Center" Height="259" Margin="0,56,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" VerticalScrollBarVisibility="Visible" IsReadOnlyCaretVisible="True"/>
        <Label Grid.Column="4" Content="Fragments in Cache" HorizontalAlignment="Right" Height="29" Margin="0,8,80,0" Grid.Row="1" VerticalAlignment="Top" Width="258"/>
        <ListBox x:Name="fragmentList" Grid.Column="4" HorizontalAlignment="Right" Height="271" Margin="0,44,14,0" Grid.Row="1" VerticalAlignment="Top" Width="320" d:ItemsSource="{d:SampleData ItemCount=5}" IsEnabled="False" SelectionChanged="fragmentList_SelectionChanged"/>
        <Button x:Name="viewFragmentBtn" Grid.Column="4" Content="View Fragment Detail" HorizontalAlignment="Right" Height="44" Margin="0,320,184,0" Grid.Row="1" VerticalAlignment="Top" Width="150" Click="viewFragmentBtn_Click" IsEnabled="False"/>
        <Button x:Name="clearFragmentBtn" Grid.Column="4" Content="Clear All Fragments" HorizontalAlignment="Right" Height="44" Margin="0,320,14,0" Grid.Row="1" VerticalAlignment="Top" Width="133" Click="clearFragmentBtn_Click" IsEnabled="False"/>
        <Button x:Name="clearLogBtn" Grid.Column="1" Content="Clear Cache Log" HorizontalAlignment="Left" Height="44" Margin="215,320,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Click="clearLogBtn_Click" RenderTransformOrigin="0.575,0.542"/>
        <Button x:Name="viewLogBtn" Grid.Column="1" Content="View Cache Log" HorizontalAlignment="Right" Height="44" Margin="0,320,195,0" Grid.Row="1" VerticalAlignment="Top" Width="139" Click="viewLogBtn_Click" RenderTransformOrigin="0.487,0.514"/>
        <Button x:Name="closeCacheBtn" Grid.Column="1" Content="Close Cache" HorizontalAlignment="Right" Height="44" Margin="0,4,22,0" VerticalAlignment="Top" Width="111" Click="closeCacheBtn_Click" IsEnabled="False" Grid.Row="1" RenderTransformOrigin="0.584,0.542"/>

    </Grid>
</Window>
